<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_blue"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/third_blue"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_string"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_settings"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/image_bulb"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/ic_bulb"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/first_blue_1.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_toolbar" />
    <TextView
        android:id="@+id/text_wil_be"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_note_string"
        android:fontFamily="@font/roboto"
        android:textColor="@color/fourth_blue"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_bulb"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/new_note_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rect_full"
        android:backgroundTint="@color/fourth_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus_string"
        android:textSize="40sp"
        android:textColor="@color/dark_white"
        app:layout_constraintLeft_toLeftOf="@+id/new_note_btn"
        app:layout_constraintRight_toRightOf="@id/new_note_btn"
        app:layout_constraintTop_toTopOf="@id/new_note_btn"
        app:layout_constraintBottom_toBottomOf="@id/new_note_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>