<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewNoteActivity">
    <FrameLayout
        android:id="@+id/view_toolbar_new_note"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/third_blue"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageButton
            android:id="@+id/back_to_home_btn"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_note_string"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginStart="55dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/bottom_frame"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:id="@+id/accept_new_note"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_check_circle"
            android:backgroundTint="@color/third_blue"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </FrameLayout>
    <EditText
        android:id="@+id/name_new_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/name_string"
        android:paddingStart="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/view_toolbar_new_note"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:background="@null"
        android:hint="@string/description_string"
        android:gravity="top|start"
        android:paddingStart="16dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/name_new_note_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_frame"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>